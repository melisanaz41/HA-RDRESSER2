@model HAİRDRESSER2.Models.Uzman
@{
    ViewBag.Title = "Randevu Al";
}
<h2>@Model.Ad @Model.Soyad ile Randevu Al</h2>
<form action="/Randevu/RandevuAl" method="post">
    <input type="hidden" name="uzmanId" value="@Model.Id" />
    <label for="tarih">Tarih:</label>
    <input type="date" id="tarih" name="tarih" required />
    <label for="saat">Saat:</label>
    <input type="time" id="saat" name="saat" required />
    <button type="submit">Randevu Al</button>
</form>
