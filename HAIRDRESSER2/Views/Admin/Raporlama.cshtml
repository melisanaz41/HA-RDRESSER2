@model dynamic

<h2 class="text-center mb-4">Raporlama</h2>

<!-- Toplam Kazanç ve Gelinen Randevu Sayısı -->
<div class="mb-3">
    <p><strong>Toplam Kazanç:</strong> @Model.ToplamKazanc.ToString("C")</p>
    <p><strong>Toplam Gelinen Randevu Sayısı:</strong> @Model.ToplamGelinenRandevu</p>
</div>

<!-- Uzman Bazlı Rapor Tablosu -->
<h3>Uzman Bazlı Rapor</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Uzman</th>
            <th>Randevu Sayısı</th>
            <th>Toplam Kazanç</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rapor in Model.UzmanRaporlari)
        {
            <tr>
                <td>@rapor.Uzman.Ad @rapor.Uzman.Soyad</td>
                <td>@rapor.RandevuSayisi</td>
                <td>@rapor.ToplamKazanc.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Geri Dön Butonu -->
<div class="mt-3">
    <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-secondary">Geri Dön</a>
</div>
