@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-secondary text-white">
                    <h2>Admin Giriş</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login" asp-controller="Admin">
                        <div class="mb-3">
                            <label for="Email" class="form-label">E-posta:</label>
                            <input type="email" id="Email" name="Email" class="form-control" placeholder="E-postanızı girin" required />
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Şifre:</label>
                            <input type="password" id="Password" name="Password" class="form-control" placeholder="Şifrenizi girin" required />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-secondary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">Admin yetkisi olan kullanıcılar için giriş</small>
                </div>
            </div>
        </div>
    </div>
</div>
