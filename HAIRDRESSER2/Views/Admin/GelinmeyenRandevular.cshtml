@model IEnumerable<HAIRDRESSER2.Models.Randevu>

<h2>Gelinmeyen Randevular</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Randevu ID</th>
                <th>Uzman</th>
                <th>İşlem</th>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Ücret</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Id</td>
                    <td>@randevu.Uzman?.Ad @randevu.Uzman?.Soyad</td>
                    <td>@randevu.Islem?.Ad</td>
                    <td>@randevu.Tarih.ToShortDateString()</td>
                    <td>@randevu.Saat</td>
                    <td>@randevu.Islem?.Fiyat.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Henüz gelinmeyen randevu yok.</p>
}
