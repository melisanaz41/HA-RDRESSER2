@model IEnumerable<HAIRDRESSER2.Models.Uzman>

<h2>Uzman Listesi</h2>
<a asp-action="UzmanEkle" class="btn btn-primary mb-3">Yeni Uzman Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Uzmanlık Alanı</th>
            <th>Telefon</th>
            <th>Eklenme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var uzman in Model)
            {
                <tr>
                    <td>@uzman.Ad</td>
                    <td>@uzman.Soyad</td>
                    <td>@(uzman.UzmanlikAlani?.Ad ?? "Bilinmiyor")</td>
                    <td>@uzman.Telefon</td>
<td>@(uzman.EklenmeTarihi.ToShortDateString() ?? "Bilinmiyor")</td>

                    <td>
                        <a asp-action="UzmanGuncelle" asp-route-id="@uzman.Id" class="btn btn-warning">Düzenle</a>
                        <form asp-action="UzmanSil" asp-route-id="@uzman.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>



                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-danger">Hiç uzman bulunamadı. Yeni bir uzman eklemek için <a asp-action="UzmanEkle">buraya tıklayın</a>.</td>
            </tr>
        }
    </tbody>
</table>
