@model HAIRDRESSER2.Models.Uzman

<h2>Uzman Güncelle</h2>

<form asp-action="UzmanGuncelle" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Soyad"></label>
        <input asp-for="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="UzmanlikAlani"></label>
        <input asp-for="UzmanlikAlani" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Telefon"></label>
        <input asp-for="Telefon" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
