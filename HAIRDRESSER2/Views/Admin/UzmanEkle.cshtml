@model HAIRDRESSER2.Models.Uzman

<h2 class="text-center mb-4">Yeni Uzman Ekle</h2>

<form asp-action="UzmanEkle" method="post">
    <!-- Genel hata mesajlarını gösteren kısım -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- Ad Alanı -->
    <div class="form-group mb-3">
        <label asp-for="Ad" class="fw-bold">Ad</label>
        <input type="text" asp-for="Ad" class="form-control" placeholder="Uzmanın adını giriniz" required />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <!-- Soyad Alanı -->
    <div class="form-group mb-3">
        <label asp-for="Soyad" class="fw-bold">Soyad</label>
        <input type="text" asp-for="Soyad" class="form-control" placeholder="Uzmanın soyadını giriniz" required />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>

    <!-- Telefon Alanı -->
    <div class="form-group mb-3">
        <label asp-for="Telefon" class="fw-bold">Telefon</label>
        <input type="tel" asp-for="Telefon" class="form-control" placeholder="Telefon numarasını giriniz" required />
        <span asp-validation-for="Telefon" class="text-danger"></span>
    </div>
    <!-- Uzmanlık Alanı Dropdown -->
    <div class="form-group">
        <label for="UzmanlikAlaniId">Uzmanlık Alanı</label>
        <select asp-for="UzmanlikAlaniId" asp-items="ViewBag.UzmanlikAlanlari" class="form-control">
            <option value="0">Seçiniz</option>
        </select>
        <span asp-validation-for="UzmanlikAlaniId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CalismaSaatiId">Çalışma Saati</label>
        <select asp-for="CalismaSaatiId" asp-items="ViewBag.CalismaSaatleri" class="form-control">
            <option value="0">Seçiniz</option>
        </select>
        <span asp-validation-for="CalismaSaatiId" class="text-danger"></span>
    </div>

    


    <!-- Kaydet Butonu -->
    <button type="submit" class="btn btn-success w-100 mt-3">Kaydet</button>
</form>

<!-- Geri Dön Butonu -->
<div class="text-center mt-3">
    <a asp-action="UzmanListesi" class="btn btn-secondary">Geri Dön</a>
</div>
