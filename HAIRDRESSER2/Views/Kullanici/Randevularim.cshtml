@model List<HAIRDRESSER2.Models.Randevu>

@{
    ViewBag.Title = "Randevularım";
}

<h2>Randevularım</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Randevu ID</th>
            <th>Uzman</th>
            <th>İşlem</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Ücret</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu?.Id</td>
                    <td>@(randevu?.Uzman != null ? $"{randevu.Uzman.Ad} {randevu.Uzman.Soyad}" : "Bilinmiyor")</td>
                    <td>@(randevu?.Islem != null ? randevu.Islem.Ad : "Bilinmiyor")</td>
                    <td>@randevu?.Tarih.ToShortDateString()</td>
                    <td>@randevu?.Saat.ToString(@"hh\:mm")</td>
                    <td>@(randevu?.Ucret != null ? randevu.Ucret.ToString("C") : "Bilinmiyor")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Hiç randevunuz yok. Yeni bir randevu almak için <a asp-action="RandevuAl" asp-controller="Randevu">buraya tıklayın</a>.</td>
            </tr>
        }
    </tbody>
</table>
