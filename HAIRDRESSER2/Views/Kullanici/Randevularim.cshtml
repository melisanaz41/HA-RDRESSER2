@model IEnumerable<HAIRDRESSER2.Models.Randevu>

@{
    ViewBag.Title = "Randevularım";
}

<h2 class="mb-4">Randevularım</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Randevu ID</th>
            <th>Uzman</th>
            <th>İşlem</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Ücret</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Id</td>
                    <td>@randevu.Uzman.Ad @randevu.Uzman.Soyad</td>
                    <td>@randevu.Islem.Ad</td>
                    <td>@randevu.Tarih.ToShortDateString()</td>
                    <td>@randevu.Saat</td>
                    <td>@randevu.Ucret.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Hiç randevunuz yok. Yeni bir randevu almak için <a asp-action="RandevuAl" asp-controller="Randevu">buraya tıklayın</a>.</td>
            </tr>
        }
    </tbody>
</table>
