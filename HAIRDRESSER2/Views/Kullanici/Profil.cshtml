@model HAIRDRESSER2.Models.ApplicationUser

@{
    ViewBag.Title = "Profil";
}

<h2>@Model.Ad @Model.Soyad - Profil</h2>

<div style="margin-bottom: 20px;">
    <h3>Kişisel Bilgiler</h3>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
</div>

<h3>Randevular</h3>
@if (Model.Randevular != null && Model.Randevular.Any())
{
    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background-color: #f2f2f2;">
                <th style="padding: 10px; border: 1px solid #ddd;">Tarih</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Saat</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Uzman Adı</th>
                <th style="padding: 10px; border: 1px solid #ddd;">Uzman Soyadı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model.Randevular)
            {
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;">@randevu.Tarih.ToShortDateString()</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">@randevu.Saat</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">@randevu.Uzman.Ad</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">@randevu.Uzman.Soyad</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz randevunuz bulunmamaktadır.</p>
}
